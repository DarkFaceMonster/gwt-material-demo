<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:m="urn:import:gwt.material.design.client.ui"
             xmlns:ma="urn:import:gwt.material.design.addins.client"
             xmlns:demo="urn:import:gwt.material.design.demo.client.ui">
    <g:HTMLPanel>
        <m:MaterialRow addStyleNames="code">
            <m:MaterialTitle title="Usage" />
            <demo:ExternalLibrary text="JDenticon 1.3.2" link="https://github.com/dmester/jdenticon"/>
            <demo:PrettyPre addStyleNames="lang-xml">
                &emsp;&lt;!-- Addin Import --><br/>
                xmlns:ma="urn:import:gwt.material.design.addins.client"<br/><br/>
                &lt;!-- Addin Usage --><br/>
                &lt;ma:avatar.MaterialAvatar name="kevzlou7979" width="150" height="150" />
            </demo:PrettyPre>
    
            <ma:avatar.MaterialAvatar name="kevzlou7979" width="150" height="150" />
        </m:MaterialRow>
    
        <m:MaterialRow addStyleNames="code">
            <m:MaterialTitle title="setValue() and setDimension()" description="You can easily update the avatar during textbox key up events." />
            <m:MaterialRow>
                <m:MaterialColumn grid="l6 m6 s12">
                    <m:MaterialRow>
                        <m:MaterialRow textAlign="CENTER">
                            <ma:avatar.MaterialAvatar ui:field="avatar" backgroundColor="WHITE" name="marjorie" width="150" height="150" shadow="1" circle="true" />
                        </m:MaterialRow>
                        <m:MaterialTextBox ui:field="txtAvatarName" grid="s12" label="Avatar Name" text="marjorie"/>
                        <ma:combobox.MaterialComboBox ui:field="dimensions" textAlign="LEFT" label="Dimension" grid="s12" />
                        <m:MaterialRow>
                            <m:MaterialCheckBox ui:field="autoReload" text="Auto Reload" value="true" grid="s6" />
                            <m:MaterialButton ui:field="reload" text="Reload" grid="s6" />
                        </m:MaterialRow>
                    </m:MaterialRow>
                </m:MaterialColumn>
            </m:MaterialRow>
            <demo:PrettyPre addStyleNames="lang-java">

            </demo:PrettyPre>
        </m:MaterialRow>
    </g:HTMLPanel>
</ui:UiBinder>
