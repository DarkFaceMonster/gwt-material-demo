<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:m="urn:import:gwt.material.design.client.ui"
             xmlns:demo="urn:import:gwt.material.design.demo.client.ui">
  <ui:style>
    .frame{
      border: 1px solid #e9e9e9;
    }
  </ui:style>

  <m:MaterialPanel>
    <g:HTMLPanel>
      <m:MaterialRow addStyleNames="code">
        <m:MaterialTitle title="Usage"
                         description="Using MaterialIcon Widget you can easily make it by adding the lines below. Just set the icon attribute and indicate which icon you want to display. Please refer below about the list of icon." />
        <m:MaterialIcon iconType="ROTATION_3D" />
        <demo:PrettyPre addStyleNames="lang-xml">
         &lt;m:MaterialIcon iconType="ROTATION_3D" />
        </demo:PrettyPre>
      </m:MaterialRow>
  
      <m:MaterialRow addStyleNames="code">
      <m:MaterialTitle title="Sizes"
                       description="To control the size of the icon, just set size attribute in your MaterialIcon widget." />
        <m:MaterialRow addStyleNames="valign-wrapper">
          <m:MaterialColumn grid="s4 m2" addStyleNames="center-align">
            <m:MaterialIcon iconType="POLYMER" iconSize="TINY" />
            <m:MaterialLabel text="Tiny" />
          </m:MaterialColumn>
          <m:MaterialColumn grid="s4 m2" addStyleNames="center-align">
            <m:MaterialIcon iconType="POLYMER" iconSize="SMALL" />
            <m:MaterialLabel text="Small" />
          </m:MaterialColumn>
          <m:MaterialColumn grid="s4 m2" addStyleNames="center-align">
            <m:MaterialIcon iconType="POLYMER" iconSize="MEDIUM" />
            <m:MaterialLabel text="Medium" />
          </m:MaterialColumn>
          <m:MaterialColumn grid="s4 m2" addStyleNames="center-align">
            <m:MaterialIcon iconType="POLYMER" iconSize="LARGE" />
            <m:MaterialLabel text="Large" />
          </m:MaterialColumn>
        </m:MaterialRow>
  
        <demo:PrettyPre addStyleNames="lang-xml">
          &emsp;&lt;m:MaterialIcon iconType="POLYMER" iconSize="TINY" /><br/>
          &lt;m:MaterialIcon iconType="POLYMER" iconSize="SMALL" /><br/>
          &lt;m:MaterialIcon iconType="POLYMER" iconSize="MEDIUM" /><br/>
          &lt;m:MaterialIcon iconType="POLYMER" iconSize="LARGE" /><br/>
        </demo:PrettyPre>
      </m:MaterialRow>
  
      <m:MaterialRow addStyleNames="code">
        <m:MaterialTitle title="Icon inside MaterialLink"
                         description="You can add in your material link an icon instance by adding icon attribute" />
        <m:MaterialLink fontSize="2em" text="I love Material Design" textColor="RED" iconType="FAVORITE" iconPosition="LEFT" />
  
        <demo:PrettyPre addStyleNames="lang-xml">
          &lt;m:MaterialLink fontSize="2em" text="I love Material Design" textColor="red" iconType="FAVORITE" iconPosition="LEFT" />
        </demo:PrettyPre>
      </m:MaterialRow>
  
      <m:MaterialRow addStyleNames="code">
        <m:MaterialTitle title="Icon List" description="Get the specific name for your icon" />
        <m:MaterialRow ui:field="iconsRow" />
      </m:MaterialRow>

      <m:MaterialRow addStyleNames="code">
        <m:MaterialTitle title="Custom Icons i.e FontAwesome"
                         description="Calling setCustomIconType(String) will let you handle external icons like FontAwesomeIcons. Follow the guides below to implement custom icons." />

        <m:MaterialTitle title="Step 1" description="Include the FontAwesomeResources into your gwt.xml module" />
        <demo:PrettyPre addStyleNames="lang-xml">
          &lt;!-- Font Awesome Icons import --><br/>
          &lt;inherits name="gwt.material.design.incubator.FontAwesomeResources" /><br/>
        </demo:PrettyPre>

        <m:MaterialTitle title="Step 2" description="Now you can call icon.setCustomIconType(String) to define the fontawesomeicon easily" />
        <demo:PrettyPre addStyleNames="lang-xml">
          &emsp;&lt;m:MaterialIcon customIconType="fas fa-spider" iconColor="RED_DARKEN_2" iconSize="TINY" marginRight="20"/><br/>
          &lt;m:MaterialButton type="FLOATING" size="MEDIUM" iconColor="WHITE" backgroundColor="PURPLE" customIconType="fas fa-theater-masks" marginRight="20"/><br/>
          &lt;m:MaterialButton text="Viber" size="MEDIUM" iconColor="WHITE" backgroundColor="INDIGO" customIconType="fab fa-viber" marginRight="20"/><br/>
          &lt;m:MaterialLink text="CSV File" customIconType="fas fa-file-csv" display="BLOCK"/>
        </demo:PrettyPre>

        <m:MaterialTitle title="Plain Icons" />
        <m:MaterialRow backgroundColor="GREY_LIGHTEN_3" padding="20">
          <m:MaterialIcon customIconType="fas fa-spider" iconColor="RED_DARKEN_2" iconSize="TINY" marginRight="20"/>
          <m:MaterialIcon customIconType="fas fa-spider" iconColor="RED_DARKEN_2" iconSize="SMALL" marginRight="20"/>
          <m:MaterialIcon customIconType="fas fa-spider" iconColor="RED_DARKEN_2" iconSize="MEDIUM" marginRight="20"/>
          <m:MaterialIcon customIconType="fas fa-spider" iconColor="RED_DARKEN_2" iconSize="LARGE" marginRight="20"/>
        </m:MaterialRow>

        <m:MaterialTitle title="FAB" />
        <m:MaterialRow backgroundColor="GREY_LIGHTEN_3" padding="20">
          <m:MaterialButton type="FLOATING" size="MEDIUM" iconColor="WHITE" backgroundColor="PURPLE" customIconType="fas fa-theater-masks" marginRight="20"/>
          <m:MaterialButton type="FLOATING" size="LARGE" iconColor="WHITE" backgroundColor="PURPLE" customIconType="fas fa-theater-masks" />
        </m:MaterialRow>


        <m:MaterialTitle title="Buttons" />
        <m:MaterialRow backgroundColor="GREY_LIGHTEN_3" padding="20">
          <m:MaterialButton text="Viber" size="MEDIUM" iconColor="WHITE" backgroundColor="INDIGO" customIconType="fab fa-viber" marginRight="20"/>
          <m:MaterialButton text="Viber" size="LARGE" iconColor="WHITE" backgroundColor="INDIGO" customIconType="fab fa-viber" />
        </m:MaterialRow>

        <m:MaterialTitle title="Links" />
        <m:MaterialRow backgroundColor="GREY_LIGHTEN_3" padding="20">
          <m:MaterialLink text="CSV File" customIconType="fas fa-file-csv" display="BLOCK"/>
          <m:MaterialLink text="Contract File" customIconType="fas fa-file-contract" display="BLOCK"/>
          <m:MaterialLink text="Code File" customIconType="fas fa-file-code" display="BLOCK"/>
          <m:MaterialLink text="PDF File" customIconType="fas fa-file-pdf" display="BLOCK"/>
        </m:MaterialRow>
      </m:MaterialRow>
    </g:HTMLPanel>
  </m:MaterialPanel>
</ui:UiBinder>
